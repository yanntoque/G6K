{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="container">	
	<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
		<div class="panel panel-primary" >
			<div class="panel-heading">
				<div class="panel-title">{{ 'layout.login'|trans }}</div>
				<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot password?'|trans({}, 'messages') }}</a></div>
			</div>	 
			<div style="padding-top:30px" class="panel-body" >
				{% include "FOSUserBundle::fos.messages.html.twig" %}
				{% if error %}
				<div id="login-alert" class="alert alert-danger col-sm-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<form id="loginform" action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						<input id="login-username" type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" required="required">										
					</div>
					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						 <input id="login-password" type="password" class="form-control" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required">
					</div>
					 <div class="input-group">
						<div class="checkbox">
							<label>
								<input id="login-remember" type="checkbox" name="_remember_me" value="1"> {{ 'security.login.remember_me'|trans }}
							</label>
						</div>
					</div>
					<div style="margin-top:10px" class="form-group">
						<div class="col-sm-12 controls">
							<input type="submit" id="_submit" class="btn btn-primary" name="_submit" value="{{ 'security.login.submit'|trans }}" />
						</div>
					</div>
				</form>	 
			</div>					 
		</div>  
	</div>
</div>
{% endblock fos_user_content %}
